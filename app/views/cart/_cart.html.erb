<%= turbo_frame_tag "cart" do %>
	<div class="container-fluid  mt-100">
	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header cartHead">
					<div class="d-flex justify-content-between align-items-center mb-4">
					<h3 class="fw-normal mb-0 text-black cartText">Shopping Cart</h3>
				</div>
			</div>
			<div class="card-body cart">
				<div class="col-sm-12 empty-cart-cls text-center">
<% if user_signed_in? %>
					<% if @cart.orderables.count > 0 %>
					<%= render "cart/orderables" %>
					<p>Total: <%= @cart.total %></p>
					<% else %>
					<p>Your cart is empty</p>
					<% end %>
					<a><%= link_to "Continue Shopping" , root_path, class:"btn btn-primary cart-btn-transform m-3"%></a>
<%end%>
				</div>
			</div>
		</div>
	</div>
<% end %>
