<div class="p">
<h1 class="text-center"><%= pluralize(@products.count, "Result") %></h1>
<div class="container">
<%= render 'search/form' %>

  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
        <th><%= sort_link(@query, :category_name, "Category") %></th>
        <th><%= sort_link(@query, :body, "Brand") %></th>
        <th><%= sort_link(@query, :user_full_name, "Users") %></th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |post| %>
        <tr>
          <td><%= link_to post.title, post %></td>
          <td><%= link_to post.description%></td>
          <td><%= link_to post.price%></td>
          <td><%= link_to post.user.email%></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>

</div>



