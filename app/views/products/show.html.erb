<div class="p">
  <h2>Show Product</h2>
  <table class="table table-striped table-bordered table-hover"> 
    <thead > 
      <tr class="table-dark">

        <th scope="col">Image of the product</th>
        <th scope="col">Name</th>
        <th scope="col">Body</th>
        <th scope="col">Price</th>
      <% if user_signed_in? %>
        <th scope="col">Edit Product</th>
        <th scope="col">Delete Product</th>  
      <%end%>
      </tr>

      <tr class="table-light">
        <th scope="col"> 
          <%if @product.profile_image.attached?%>
            <%= image_tag(@product.profile_image, size: '250x250') %>
          <%end%>
        </th>
        <td scope="col"><%= @product.title%></td>
        <td scope="col"><%= @product.description%></td>
        <td scope="col"><%= @product.price%></td>
      <% if user_signed_in? %>
        <td scope="col"><%= link_to "Edit", edit_product_path(@product), class: "btn btn-warning" %></td>
        <td><%= button_to "Destroy", product_path(@product),
            method: :delete, data: { turbo_confirm: "Are you sure?" },
            class: "btn btn-danger" %></td>
      <%end%>
      </tr>
    </thead>
  </table>

<br>

  <h2>Comments</h2>
  <%= render @product.comments %>
  <h2>Add a comment:</h2>
  <%= render 'comments/form' %>
</div>